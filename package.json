  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@microsoft/eslint-formatter-sarif": "^3.1.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/mocha": "^10.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node-red": "^1.3.5",
    "@types/stoppable": "^1.1.3",
    "eslint": "^9.39.2",
    "eslint-plugin-jsdoc": "^61.5.0",
